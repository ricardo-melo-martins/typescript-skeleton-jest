{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../../",
  "testRegex": ".*\\.(spec|e2e-spec)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "../../coverage",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src/",
    "<rootDir>/test/"
  ]
}